<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/circle_alert"
        android:gravity="center_vertical"
        android:text="@string/high_data_usage"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/alertMessage"
        app:layout_constraintEnd_toEndOf="@+id/alertMessage"
        app:layout_constraintStart_toStartOf="@+id/alertMessage" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>