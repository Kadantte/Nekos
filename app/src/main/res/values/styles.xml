<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textViewStyle">@style/Widget.AppCompat.TextView.SpinnerItem</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppThemeNsfw" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/nsfw_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nsfw_colorPrimaryDark</item>
        <item name="colorAccent">@color/nsfw_colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/nsfw_colorPrimary</item>
    </style>

    <style name="PrimaryFlatButtonNsfw" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/nsfw_colorPrimary</item>
        <item name="colorAccent">@color/nsfw_colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
